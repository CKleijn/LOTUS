<%- include("./header/header") %>

<section class="h-100 form-bg">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <form action="/assignment" method="POST" class="form-horizontal form-assignment-horizontal">
                <div class="heading">Formulier</div>
                <div class="form-heading mt-5">Persoonlijke gegevens</div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="firstName" class="form-control" placeholder="Voornaam" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.firstName%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof firstNameErr != "undefined"){%><%=firstNameErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text"name="lastName" class="form-control" placeholder="Achternaam" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.lastName%><%}%>" />
                            <label class="form-label form-error"><% if(typeof lastNameErr != "undefined"){%><%=lastNameErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="emailAddress" class="form-control" placeholder="E-mailadres" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.emailAddress%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof emailAddressErr != "undefined"){%><%=emailAddressErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="street" class="form-control" placeholder="Straat" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.street%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof streetErr != "undefined"){%><%=streetErr%><%}%></label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="number" name="houseNumber" class="form-control" placeholder="Huisnummer" min="0" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.houseNumber%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof houseNumberErr != "undefined"){%><%=houseNumberErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="houseNumberAddition" class="form-control" placeholder="Huisnummer toevoeging" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.houseNumberAddition%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof houseNumberAdditionErr != "undefined"){%><%=houseNumberAdditionErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="postalCode" class="form-control" placeholder="Postcode" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.postalCode%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof postalCodeErr != "undefined"){%><%=postalCodeErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="town" class="form-control" placeholder="Plaats" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.town%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof townErr != "undefined"){%><%=townErr%><%}%></label>
                        </div>
                    </div>
                </div>
                <div class="form-heading mt-5">Adres gegevens</div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="billingStreet" class="form-control" placeholder="Factuur straat" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.billingStreet%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof billingStreetErr != "undefined"){%><%=billingStreetErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="number" name="billingHouseNumber" class="form-control" min="0" placeholder="Factuur huisnummer" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.billingHouseNumber%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof billingHouseNumberErr != "undefined"){%><%=billingHouseNumberErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="billingHouseNumberAddition" class="form-control" placeholder="Factuur huisnummer toevoeging" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.billingHouseNumberAddition%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof billingHouseNumberAdditionErr != "undefined"){%><%=billingHouseNumberAdditionErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="billingPostalCode" class="form-control" placeholder="Factuur postcode" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.billingPostalCode%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof billingPostalCodeErr != "undefined"){%><%=billingPostalCodeErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="billingTown" class="form-control" placeholder="Factuur plaats" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.billingTown%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof billingTownErr != "undefined"){%><%=billingTownErr%><%}%></label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="playgroundStreet" class="form-control" placeholder="Speelplaats straat" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.playgroundStreet%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof playgroundStreetErr != "undefined"){%><%=playgroundStreetErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="number" name="playgroundHouseNumber" class="form-control" min="0" placeholder="Speelplaats huisnummer" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.playgroundHouseNumber%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof playgroundHouseNumberErr != "undefined"){%><%=playgroundHouseNumberErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="playgroundHouseNumberAddition" class="form-control" placeholder="Speelplaats huisnummer toevoeging" max="1" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.playgroundHouseNumberAddition%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof playgroundHouseNumberAdditionErr != "undefined"){%><%=playgroundHouseNumberAdditionErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="playgroundPostalCode" class="form-control" placeholder="Speelplaats postcode" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.playgroundPostalCode%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof playgroundPostalCodeErr != "undefined"){%><%=playgroundPostalCodeErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="playgroundTown" class="form-control" placeholder="Speelplaats plaats" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.playgroundTown%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof playgroundTownErr != "undefined"){%><%=playgroundTownErr%><%}%></label>
                        </div>
                    </div>
                </div>
                <div class="form-heading mt-5">Overige</div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="datetime-local" name="dateTime" class="form-control" placeholder="Datum/tijd" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.dateTime%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof dateTimeErr != "undefined"){%><%dateTimeErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="number" name="amountOfLotusVictims" class="form-control" placeholder="Aantal LOTUS slachtoffers" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.amountOfLotusVictims%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof amountOfLotusVictimsErr != "undefined"){%><%=amountOfLotusVictimsErr%><%}%></label>
                        </div>
                        <div class="form-group">
                            <input type="text" name="comments" class="form-control" placeholder="Opmerkingen" value="<% if(typeof oldValues != "undefined"){%><%=oldValues.comments%><%}%>"/>
                            <label class="form-label form-error"><% if(typeof commentsErr != "undefined"){%><%=commentsErr%><%}%></label>
                        </div>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-default"><i class="fa fa-paper-plane"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<%- include("./footer/footer") %>