<%- include("header/header") %>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section dashboard">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Welkom <%= session.firstName %></h5>
                        <% let role = ""; switch(session.roles) { case "coordinator": role = "CoÃ¶rdinator"; break; case "client" : role = "Opdrachtgever"; break; case "member": role = "LOTUSslachtoffer"; break; } %>
                        <p>Wat is het toch een mooie dag om een <%= role %> te zijn!</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
                <div class="col-lg-3">
                    <div class="card info-card sales-card">
      
                    <a href="/assignment_overview">
                      <div class="card-body">

                        <% if (session.roles == "coordinator" || session.roles == "member") { %>
                            <h5 class="card-title">Opdrachten</h5>
                        <% } else if (session.roles == "client") { %>
                            <h5 class="card-title">Mijn opdrachten</h5>
                        <% } %>

                        <div class="d-flex align-items-center">
                          <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                            <i class="bi bi-archive"></i>
                          </div>
                          <div class="ps-3">
                            <% let assignment_card_text = ""; if (assignments_amount > 1 || assignments_amount == 0) {assignment_card_text = assignments_amount + " opdrachten" } else {assignment_card_text = assignments_amount + " opdracht"} %>
                            <p class="assignment_card_text"><%= assignment_card_text %></p>
                          </div>
                        </div>
                      </div>
                    </a>
      
                    </div>
                </div>
                <% if (session.roles == "coordinator") { %>
                    <div class="col-lg-3">
                        <div class="card info-card sales-card">
        
                        <a href="/request_overview">
                        <div class="card-body">
                            <h5 class="card-title">Verzoeken</h5>
                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-inboxes"></i>
                                </div>
                                <div class="ps-3">
                                    <% let request_card_text = ""; if (request_amount > 1 || request_amount == 0) {request_card_text = request_amount + " verzoeken" } else {request_card_text = request_amount + " verzoek"} %>
                                    <p class="request_card_text"><%= request_card_text %></p>
                                </div>
                            </div>
                        </div>
                        </a>
        
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>
</main>
<!-- End #main -->

<%- include("footer/footer") %>
