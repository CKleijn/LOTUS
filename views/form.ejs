<%- include("./header/header") %>

<section class="vh-100" style="background-color: #eee">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px">
                    <div class="card-body p-md-5">
                        <img src="img/LOTUS_Logo_PNG.png" class="img-fluid nav-logo" alt="Responsive image">
                        <div class="row justify-content-center">
                            
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-6 mt-4">Formulier invullen</p>

                                <form action="/form" method="POST" class="mx-1 mx-md-4">
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example1c">Voornaam:</label>
                                            <input type="text" id="form3Example1c" name="firstName" class="form-control" value="<% if(typeof oldValues !== "undefined"){%><%=oldValues.firstName%><%}%>"/>
                                            <label class="form-label" style="color: red; padding: 10px 0px"><% if(typeof firstNameErr !== "undefined"){%><%=firstNameErr%><%}%></label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example2c">Achternaam:</label>
                                            <input type="text" id="form3Example1c" name="lastName" class="form-control" value="<% if(typeof oldValues !== "undefined"){%><%=oldValues.lastName%><%}%>" />
                                            <label class="form-label" style="color: red; padding: 10px 0px"><% if(typeof lastNameErr !== "undefined"){%><%=lastNameErr%><%}%></label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example3c">E-mailadres:</label>
                                            <input type="email" id="form3Example3c" name="emailAddress" class="form-control" value="<% if(typeof oldValues !== "undefined"){%><%=oldValues.emailAddress%><%}%>"/>
                                            <label class="form-label" style="color: red; padding: 10px 0px"><% if(typeof emailAddressErr !== "undefined"){%><%=emailAddressErr%><%}%></label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example4c">Factuur adres:</label>
                                            <input type="email" id="form3Example3c" name="invoiceAddress" class="form-control" value="<% if(typeof oldValues !== "undefined"){%><%=oldValues.invoiceAddress%><%}%>"/>
                                            <label class="form-label" style="color: red; padding: 10px 0px"><% if(typeof invoiceAddressErr !== "undefined"){%><%=invoiceAddressErr%><%}%></label>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example5c">Datum:</label>
                                            <input type="datetime-local" id="dateTime" name="dateTime" class="form-control">                               
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="form3Example6c">Postcode:</label>
                                            <input type="zip" id="form3Example3c" name="postalCode" class="form-control" value="<% if(typeof oldValues !== "undefined"){%><%=oldValues.postalCode%><%}%>"/>
                                            <label class="form-label" style="color: red; padding: 10px 0px"><% if(typeof postalCodeErr !== "undefined"){%><%=postalCodeErr%><%}%></label>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mb-4 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-block">Check Formulier</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include("./footer/footer") %>