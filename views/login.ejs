<%- include("./header/header") %>

<section class="vh-100 form-bg">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6">
                <form action="/login" method="POST" class="form-horizontal">
                    <div class="heading">Inloggen</div>
                    <div class="form-group">
                        <input type="text" name="emailAddress" class="form-control" placeholder="E-mailadres" value="<% if(typeof oldMailValue !== "undefined"){%><%=oldMailValue%><%}%>"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="Wachtwoord"/>
                        <label class="form-label form-error"><% if(typeof err != "undefined"){%><%=err%><%}%></label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default"><i class="fa fa-arrow-right"></i></button>
                        <span>Nog geen account als opdrachtgever? <a href="/register" class="create_account">Registreer hier</a></span>
                    </div>
                    <% if(isCreated) {%>
                        <div class="alert alert-success" role="alert">Account registreren is gelukt!</div>
                    <% } %>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include("./footer/footer") %>