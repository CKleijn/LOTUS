<%- include("header/header") %>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Opdrachten detail</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="assignment/overview">Opdrachten</a></li>
                <li class="breadcrumb-item active">Opdrachten detail</li>
            </ol>
        </nav>

        <div>
            <div class="row">
                <% assignments.forEach(assignment => { %>
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body assignment_card">
                            <h5 class="card-title"><%= assignment.amountOfLotusVictims + " LOTUSslachtoffers nodig in " + assignment.playgroundTown %></h5>
                            <h5><%= "Opdracht info " %></h5>
                            <p><%="Voornaam: " + assignment.firstName %></p>
                            <p><%="Achternaam: " + assignment.lastName %></p>
                            <p><%="Email adres: " + assignment.emailAddress %></p>
                            <p><%= "Straat: " + assignment.street%></p>
                            <p><%="Huisnummer: " + assignment.houseNumber %></p>
                            <p><%="Huisnummer toevoeging: " + assignment.houseNumberAddition %></p>
                            <p><%="Postcode: " + assignment.postalCode %></p>
                            <p><%= "Plaats: " + assignment.town%></p>
                            <h5><%= "Factuur " %></h5>
                            <p><%="Factuur emailadres: " + assignment.billingEmailAddress %></p>
                            <p><%="Datum/tijd: " + assignment.dateTime %></p>
                            <p><%= "Speelplaats " %></p>
                            <p><%="Speel plaats: " + assignment.playgroundTown %></p>
                            <p><%="Speel plaats huisnummer: " + assignment.playgroundHouseNumber %></p>
                            <p><%="Speel plaats huisnummer toevoeging: " + assignment.playgroundHouseNumberAddition%></p>
                            <p><%= "Speel plaats straat: " + assignment.playgroundStreet%></p>
                            <p><%="Speel plaats postcode: " + assignment.playgroundPostalCode %></p>
                            <h5><%= "Grimeer Adres " %></h5>
                            <p><%="Grimeer straat: " + assignment.makeUpStreet %></p>
                            <p><%="Grimeer huisnummer: " + assignment.makeUpHouseNumber %></p>
                            <p><%="Grimeer huisnummer toevoeging: " + assignment.makeUpHouseNumberAddition %></p>
                            <p><%= "Grimeer postcode: " + assignment.makeUpPostalCode%></p>
                            <p><%= "Grimeer plaats: " + assignment.makeUpTown%></p>
                            <h5><%= "Overig " %></h5>
                            <p><%="Aantal LOTUS slachtoffers: " + assignment.amountOfLotusVictims %></p>
                            <p><%="Opmerkingen: " + assignment.comments %></p>
                            <p><%="Status: " + assignment.isApproved %></p>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</main>
<%- include("footer/footer") %>
